{% extends 'base.html.twig' %}

{% block title %}Your cart{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Cart</h1>
    </div>
    {% if items | length > 0 %}
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tfoot>
        {% for item in items %}
        <tr>
            <td>{{ item.product.id }}</td>
            <td>{{ item.product.Name }}</td>
            <td>{{ item.product.Price }}</td>
            <td>{{ item.quantity }}</td>
            <td>{{ item.quantity * item.product.Price }}</td>
            <td><a href="{{ path('app_remove_cart', {'id':item.product.id}) }}" class="btn btn-danger btn-sm">Remove</a></td>
        </tr>
        <tfoot>
        <tr>
            <td>Total:</td>
            <td>{{ total }}</td>
            <td></td>
        </tr>
        </tfoot>
        </tbody>
    </table>
    <p>buy more</p>
    {% endfor %}
    {% endif %}
{% endblock %}
